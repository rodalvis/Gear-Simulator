//exemplo: 3 intervalos para 1 passo para obter 3mm de rosca.
int arred(float n);
void main(){
	float II2MM =0;
	float result=0; 
		for(float MM =0.1; MM<= 4.0;MM+=0.1){
		result=arred((600/(200/3.18*MM)));
		result<=0 ? printf("") : printf("Para MM valor de MM:%f valor intervalo:%f\n",MM,result);
	}
		for(int II=5;II<=52;II++){
		II2MM =(25.4/II);
		result=arred((600/(200/3.18*II2MM)));
		result<=0 ? printf("") : printf("Para TPI valor de TPI:%d valor intervalo:%f\n",II,result) ;
	}

	
}

int arred(float n){
	int n_int = n;
		if(n - n_int <= 0.25){return n_int;}
		else if(n - n_int >=0.85){return n_int;}
		else return 0; 
